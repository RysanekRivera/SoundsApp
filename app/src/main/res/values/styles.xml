<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Original AppCompat attributes. -->
        <item name="colorPrimary">@color/md_blue_900</item>
        <item name="colorSecondary">@color/md_blue_900</item>
        <item name="android:colorBackground">#FF1976D2</item>
        <item name="colorError">@color/errorColor</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/status_bar_color</item>
        <!-- Customize your theme here. -->
        <item name="android:navigationBarColor">@null</item>
        <item name="snackbarStyle">@style/SoundSnackBarStyle</item>
        <item name="snackbarTextViewStyle">@style/SoundSnackBarStyle.TextView</item>
        
        <!--> toolbar color -->
        <item name="colorSurface">@color/transparent</item>
        <item name="colorOnPrimary">@color/yellow</item>
        <item name="colorOnSecondary">@color/red</item>
        <item name="colorOnBackground">@color/colorAccent</item>
        <item name="colorOnError">@android:color/black</item>
        <item name="colorOnSurface">@color/md_blue_900</item>
        <item name="iconTint">@color/colorAccent</item>
    </style>
    
    <style name="BottomNavStyle" parent="AppTheme">
        <item name="bottomNavigationStyle">@style/Widget.App.BottomNavigationView</item>
    </style>
    
    <style name="Widget.App.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.BottomNavigationView</item>
    </style>
    
    <style name="ThemeOverlay.App.BottomNavigationView" parent="">
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorOnPrimary">@color/md_blue_900</item>
    </style>
    
    <style name="SoundSnackBarStyle" parent="Widget.MaterialComponents.Snackbar">
        <item name="android:background">@color/yellow</item>
        <item name="backgroundTint">@color/yellow</item>
        <item name="backgroundColor">@color/yellow</item>
        <item name="actionTextColorAlpha">1</item>
        <item name="elevation">8dp</item>
        <item name="android:alpha">1</item>
    </style>
    
    <style name="SoundSnackBarStyle.TextView" parent="Widget.MaterialComponents.Snackbar.TextView">
        <item name="android:textColor">@color/red</item>
        <item name="android:alpha">1</item>
    </style>
    
    <style name="SeekBar_color" parent="Widget.AppCompat.SeekBar">
        <item name="colorAccent">@color/yellow</item>
    </style>
    
</resources>